<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--Dubs Hygiene Personal Preference and Redundant Removals-->

<Operation Class="PatchOperationFindMod">
    <mods>
      <li>Dubs Bad Hygiene</li>
    </mods>
    <match Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
    <!--DesignationCategories-->
    <li Class="PatchOperationRemove">
    <xpath>/Defs/DesignationCategoryDef[defName="HygieneMisc"]</xpath>
    </li>
    <!--ResearchProjects_Hygiene-->
    <li Class="PatchOperationRemove">
    <xpath>/Defs/ResearchProjectDef[defName="SewageSludgeComposting"]</xpath>
    </li>
    <li Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="WaterFiltration"]/prerequisites</xpath>
    <value>
    <prerequisites>
      <li>SepticTanks</li>
    </prerequisites>
    </value>
    </li>
    <!--Jobs_Hygiene-->
    <li Class="PatchOperationRemove">
    <xpath>/Defs/JobDef[defName="LoadComposter"]</xpath>
    </li>
    <li Class="PatchOperationRemove">
    <xpath>/Defs/JobDef[defName="UnloadComposter"]</xpath>
    </li>
    <!--BuildingsA_Pipes-->
    <li Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName="airPipe"]/designationCategory</xpath>
    <value>
    <designationCategory>Temperature</designationCategory>
    </value>
    </li>
    <!--BuildingsB_Hygiene-->
    <li Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName="ToiletStallDoor"]</xpath>
    <value>
    <designationCategory>Structure</designationCategory>
    </value>
    </li>
    <li Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="LitterBox"]/designationCategory</xpath>
    </li>
    <li Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="KitchenSink"]/designationCategory</xpath>
    </li>
    <!--BuildingsC_Joy-->
    <li Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="WashingMachine"]/designationCategory</xpath>
    </li>
    <!--BuildingsE_Heating-->
    <li Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[@Name="BasedHeating"]</xpath>
    <value>
    <designationCategory>Temperature</designationCategory>
    </value>
    </li>
    <li Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName="SolarHeater"]</xpath>
    <value>
    <designationCategory>Temperature</designationCategory>
    </value>
    </li>
    <li Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[@Name="BaseRadiator"]</xpath>
    <value>
    <designationCategory>Temperature</designationCategory>
    </value>
    </li>
    <li Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="AirConOutdoorUnit"]/designationCategory</xpath>
    </li>
    <li Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[@Name="BaseAircon"]/designationCategory</xpath>
    <value>
    <designationCategory>Temperature</designationCategory>
    </value>
    </li>
    <!--BuildingsF_Irrigation-->
    <li Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="IrrigationSprinkler"]/designationCategory</xpath>
    </li>
    <li Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName="FireSprinkler"]/designationCategory</xpath>
    <value>
    <designationCategory>Misc</designationCategory>
    </value>
    </li>
    <li Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="plumbingValve"]/designationCategory</xpath>
    </li>
    <li Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="BiosolidsComposter"]</xpath>
    </li>
    <li Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="BiosolidFertilizer"]</xpath>
    </li>
    <!--Items_Resource_Stuff-->
    <li Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="Biosolids"]</xpath>
    </li>
    <!--WorkGivers-->
    <li Class="PatchOperationRemove">
    <xpath>/Defs/WorkGiverDef[defName="UnloadComposter"]</xpath>
    </li>
    <li Class="PatchOperationRemove">
    <xpath>/Defs/WorkGiverDef[defName="FillComposter"]</xpath>
    </li>
    </operations>
    </match>
</Operation>

<!--Move Irrigation Sprinkler to RF Fertile Fields' Farming Tab-->
<Operation Class="PatchOperationFindMod">
    <mods>
      <li>[RF] Fertile Fields [1.0]</li>
    </mods>
    <match Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
    <li Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName="IrrigationSprinkler"]</xpath>
    <value>
    <designationCategory>RFF_Farm</designationCategory>
    </value>
    </li>
    </operations>
    </match>
</Operation>

</Patch>