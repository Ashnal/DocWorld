<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <!--Add storage support for various mods-->

    <!--=====Vanilla=====-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>LWM's Deep Storage</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="LWM_Food_Basket"]/building/fixedStorageSettings/filter/thingDefs</xpath>
                    <value>
                        <li>Hay</li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
    <!--=====Rim Cuisine=====-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>LWM's Deep Storage</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>RimCuisine 1.0</li>
            </mods>
            <match Class="PatchOperationSequence">
                <success>Always</success>
                <operations>
                    <li Class="PatchOperationAdd">
                        <xpath>Defs/ThingDef[defName="LWM_Food_Basket"]/building/fixedStorageSettings/filter/categories</xpath>
                        <value>
                            <li>FoodProcessed</li>
                        </value>
                    </li>
                    <li Class="PatchOperationAdd">
                        <xpath>Defs/ThingDef[defName="LWM_Food_Basket"]/building/fixedStorageSettings/filter/thingDefs</xpath>
                        <value>
                            <li>RawFlax</li>
                        </value>
                    </li>
                    <li Class="PatchOperationAdd">
                        <xpath>Defs/ThingDef[defName="LWM_MealRack"]/building/fixedStorageSettings/filter/categories</xpath>
                        <value>
                            <li>FoodMealsJoy</li>
                            <li>DrinkMealsJoy</li>
                        </value>
                    </li>
                </operations>
            </match>
        </match>
    </Operation>
    <!--=====Rim of Madness - Bones=====-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>LWM's Deep Storage</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>Rim of Madness - Bones</li>
            </mods>
            <match Class="PatchOperationSequence">
                <success>Always</success>
                <operations>
                    <li Class="PatchOperationAdd">
                        <xpath>Defs/ThingDef[defName="LWM_Food_Basket"]/building/fixedStorageSettings/filter/thingDefs</xpath>
                        <value>
                            <li>ROMB_Marrow</li>
                        </value>
                    </li>
                    <li Class="PatchOperationAdd">
                        <xpath>Defs/ThingDef[defName="LWM_Food_Basket"]/building/fixedStorageSettings/filter/thingDefs</xpath>
                        <value>
                            <li>ROMB_Gelatin</li>
                        </value>
                    </li>
                </operations>
            </match>
        </match>
    </Operation>
    <!--=====[XND] Survival Tools=====-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>LWM's Deep Storage</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>[XND] Survival Tools</li>
            </mods>
            <match Class="PatchOperationSequence">
                <success>Always</success>
                <operations>
                    <li Class="PatchOperationAdd">
                        <xpath>Defs/ThingDef[defName="LWM_WeaponsCabinet"]/building/fixedStorageSettings/filter/categories</xpath>
                        <value>
                            <li>SurvivalTools</li>
                        </value>
                    </li>
                    <li Class="PatchOperationAdd">
                        <xpath>Defs/ThingDef[defName="LWM_WeaponsLocker"]/building/fixedStorageSettings/filter/categories</xpath>
                        <value>
                            <li>SurvivalTools</li>
                        </value>
                    </li>
                </operations>
            </match>
        </match>
    </Operation>
</Patch>